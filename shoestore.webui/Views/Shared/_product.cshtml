@model Product

<div class="card mb-4">
    <img class="card-img-top" src="/img/@Model.ImageUrl" alt="">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted">
            <i class="fas fa-lira-sign"></i>@Model.Price
        </small>
        <div class="card-footer text-center">
            <a asp-controller="store" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-dark btn-sm">Ä°ncele</a>
            <a asp-controller="store" asp-action="addtocart" asp-route-id="@Model.ProductId" class="btn btn-dark btn-sm">Sepete Ekle</a>
        </div>
    </div>
</div>